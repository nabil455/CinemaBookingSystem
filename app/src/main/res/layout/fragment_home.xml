<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments.Home">

    <!-- TODO: Update blank fragment layout -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/NSV"
        android:fillViewport="false"
        android:background="@color/homeback"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/welcomeTV"
                android:text="Welcom To Online Cinema System"
                android:textSize="25sp"
                android:textColor="@color/text2"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:layout_marginTop="15dp"

                />
            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:id="@+id/oneIV"
                android:src="@drawable/local"
                android:layout_below="@+id/welcomeTV"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/oneTV"
                android:text="@string/dummy1"
                android:layout_below="@+id/oneIV"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:textStyle="italic"
                android:textColor="@color/text2"
                />
            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:id="@+id/twoTV"
                android:text="@string/Dummy2"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"
                android:textStyle="italic"
               android:layout_alignParentBottom="true"
                android:layout_below="@+id/oneTV"
                android:layout_centerInParent="true"
                android:layout_marginTop="400dp"
                android:textColor="@color/text2"
                />

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>
